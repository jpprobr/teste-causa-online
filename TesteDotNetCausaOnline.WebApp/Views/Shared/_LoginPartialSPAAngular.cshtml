@*<script src="~/app/modules/infoLogin/controller.infoLogin.js"></script>*@

<div ng-controller="ControllerInfoLogin">
    <section id="Logado" ng-show="vm.isLoggedIn()">

        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <span>{{(2+2)}}</span>
                </li>
                <li>
                    <button type="button" class="btn btn-link navbar-btn navbar-link" ng-click="vm.logout()">Sair</button>
                </li>
            </ul>
        </form>
    </section>

    <section id="NaoLogado" ng-hide="vm.isLoggedIn()">
        <ul class="nav navbar-nav navbar-right">
            <li><a href="/Account#!/signup">Criar Conta</a></li>
            <li><a href="/Account#!/login">Login</a></li>
        </ul>
    </section>
</div>
